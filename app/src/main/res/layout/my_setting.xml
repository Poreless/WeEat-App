<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
            <RelativeLayout
                android:id="@+id/rl_setting_icon"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@android:color/white"
                android:clickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:text="修改头像" />
                <ImageView
                    android:id="@+id/my_setting_txlehs"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/picture_null"
                    />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/my_setting_school"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="学校"
                    android:textSize="15dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/tv_setting_school"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="无"
                    />

            </LinearLayout>


        <LinearLayout
            android:id="@+id/my_setting_id"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="学号绑定"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tv_setting_id"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="无"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_setting_phone"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号绑定"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tv_setting_phone"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="无"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_setting_sex"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改性别"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tv_setting_sex"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="无"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_setting_name"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改名称"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tv_setting_name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="无"
                />
        </LinearLayout>
        </LinearLayout>


    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:text="完成"
        android:textSize="12dp"
        android:onClick="uploadFile"/>
</LinearLayout>